# ==============================================
# BlogCommerce 環境變數設定檔
# ==============================================

# 網站基本資訊
SITE_NAME=BlogCommerce
SITE_DESCRIPTION=部落格與電商整合平台
SITE_URL=http://localhost:8000
SITE_LOGO=/static/images/logo.png
SITE_FAVICON=/static/images/favicon.ico

# 應用程式設定
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-very-long-and-random

# 資料庫設定
# SQLite (開發用)
DATABASE_URL=sqlite:///./blogcommerce.db

# MySQL (生產用)
# DATABASE_URL=mysql+pymysql://username:password@localhost/database_name

# PostgreSQL (生產用)
# DATABASE_URL=postgresql://username:password@localhost/database_name

# JWT 認證設定
JWT_SECRET_KEY=jwt-secret-key-change-in-production-very-long-and-random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# 管理員帳號設定
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123456
ADMIN_FULL_NAME=系統管理員

# 郵件設定
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=BlogCommerce

# 檔案上傳設定
UPLOAD_FOLDER=app/static/uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,pdf,doc,docx

# 分頁設定
POSTS_PER_PAGE=10
PRODUCTS_PER_PAGE=20
ORDERS_PER_PAGE=20

# 電商設定
DEFAULT_CURRENCY=TWD
DEFAULT_CURRENCY_SYMBOL=NT$
FREE_SHIPPING_THRESHOLD=1000
DEFAULT_SHIPPING_FEE=60
TAX_RATE=0.05

# 社群媒體連結
FACEBOOK_URL=https://facebook.com/your-page
INSTAGRAM_URL=https://instagram.com/your-account
TWITTER_URL=https://twitter.com/your-account
YOUTUBE_URL=https://youtube.com/your-channel

# SEO 設定
DEFAULT_META_TITLE=BlogCommerce - 部落格與電商整合平台
DEFAULT_META_DESCRIPTION=結合部落格與電商功能的現代化平台，提供優質的購物和閱讀體驗
DEFAULT_META_KEYWORDS=電商,部落格,購物,文章,商品

# Google Analytics
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# 第三方服務
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# 快取設定
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# 備份設定
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30 