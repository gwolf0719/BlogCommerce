# BlogCommerce 前端環境變數配置

# API 配置
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=10000

# 應用程式配置
VITE_APP_NAME=BlogCommerce
VITE_APP_VERSION=1.0.0
VITE_SITE_URL=http://localhost:3000

# 功能開關
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_COMMENTS=true

# 第三方服務 (可選)
VITE_GOOGLE_ANALYTICS_ID=
VITE_FACEBOOK_APP_ID=
VITE_RECAPTCHA_SITE_KEY=

# 檔案上傳配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# 電商配置
VITE_DEFAULT_CURRENCY=TWD
VITE_CURRENCY_SYMBOL=NT$
VITE_ENABLE_GUEST_CHECKOUT=true

# SEO 配置
VITE_DEFAULT_META_TITLE=BlogCommerce - 現代化部落格電商系統
VITE_DEFAULT_META_DESCRIPTION=一個基於 Vue 3 和 FastAPI 的現代化部落格電商系統
VITE_DEFAULT_OG_IMAGE=/images/og-default.jpg

# 開發配置
VITE_ENABLE_MOCK_DATA=false
VITE_SHOW_DEBUG_INFO=false 